{
    "$schema": "https://cdn.statically.io/gh/gswilcox01/rc3/v0.0.13/src/rc3/data/schemas/rc3-request-0.0.13.json",
    "method": "POST",
    "url": "{{baseUrl}}/oauth2/token",
    "form_data": {
        "grant_type": "client_credentials",
        "client_id": "greetings-client",
        "client_secret": "{{ read_secret }}",
        "scope": "greetings.read"
    },
    "save_responses": false,
    "extract": [{
        "json_path": "$.access_token",
        "to": "global",
        "var": "token"
    }]
}
