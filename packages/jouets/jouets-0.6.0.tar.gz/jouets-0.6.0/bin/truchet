#!/usr/bin/env python3

"""Helper file for development tests: call `jouets.$0`."""

import os
import runpy
import sys

ROOT = os.path.abspath(
    os.path.join(
        os.path.dirname(__file__),
        "..",
    )
)
sys.path.insert(0, ROOT)

MODULE = f"jouets.{os.path.basename(__file__)}"
runpy.run_module(MODULE, run_name="__main__")
