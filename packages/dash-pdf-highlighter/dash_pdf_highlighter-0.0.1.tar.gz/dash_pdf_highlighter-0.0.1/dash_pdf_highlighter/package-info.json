{
  "name": "dash_pdf_highlighter",
  "version": "0.0.1",
  "description": "Components to view PDFs and edit and show highlighted regions",
  "main": "index.ts",
  "repository": {
    "type": "git",
    "url": "git://github.com/VK/dash-pdf-highlighter.git"
  },
  "bugs": {
    "url": "https://github.com/VK/dash-pdf-highlighter/issues"
  },
  "homepage": "https://github.com/VK/dash-pdf-highlighter",
  "scripts": {
    "build:js::dev": "webpack --mode development",
    "build:init": "node -e \"const fs = require('fs-extra'); const sourceDir = 'dash_pdf_highlighter_base'; const destDir = 'dash_pdf_highlighter'; fs.ensureDirSync(destDir); fs.copySync(sourceDir, destDir, { overwrite: true }); console.log('Build:init script completed.');\"",
    "build:js": "webpack",
    "build:backends": "dash-generate-components ./src/ts/components dash_pdf_highlighter -p package-info.json --r-prefix '' --jl-prefix '' --ignore \\.test\\.",
    "build": "npm run build:init && npm run build:js && npm run build:backends",
    "watch": "npm run build:js::dev -- --watch"
  },
  "devDependencies": {
    "@types/react": "^17.0.39",
    "css-loader": "^6.7.1",
    "npm-run-all": "^4.1.5",
    "ramda": "^0.28.0",
    "react": "^18.3.1",
    "react-docgen": "^5.4.0",
    "react-dom": "^18.3.1",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "author": "Viktor Kr√ºckl <viktor@krueckl.de>",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^11.2.0",
    "react-pdf-highlighter": "^8.0.0-rc.0"
  }
}
