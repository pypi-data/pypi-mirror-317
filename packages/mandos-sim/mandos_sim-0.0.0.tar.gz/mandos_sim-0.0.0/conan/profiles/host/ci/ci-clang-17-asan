[settings]
os=Linux
arch=x86_64
compiler=clang
compiler.version=17
compiler.libcxx=libstdc++11
compiler.cppstd=20
build_type=Release

[options]
&:build_tests=True
&:asan=True
&:ubsan=False
&:build_tests=True
&:build_bindings=True
&:clang_tidy=True
&:warnings_as_errors=True

[buildenv]
CLANG_TIDY_PATH=/usr/bin/clang-tidy-17

[conf]
tools.cmake.cmaketoolchain:generator=Ninja
tools.build:compiler_executables={"c": "clang-17", "cpp": "clang++-17"}
tools.cmake.cmake_layout:build_folder_vars=["const.ci-clang-17-asan"]

[tool_requires]
cmake/3.30.0
ninja/1.12.0
