[settings]
os=Linux
arch=x86_64
compiler=clang
compiler.version=18
compiler.libcxx=libstdc++11
compiler.cppstd=20
build_type=Release

[options]
&:build_tests=True
&:asan=False
&:ubsan=False
&:build_tests=True
&:build_bindings=True
&:clang_tidy=True
&:warnings_as_errors=True

[buildenv]
CLANG_TIDY_PATH=/usr/bin/clang-tidy-18

[conf]
tools.cmake.cmaketoolchain:generator=Ninja
tools.build:compiler_executables={"c": "clang-18", "cpp": "clang++-18"}
tools.cmake.cmake_layout:build_folder_vars=["const.ci-clang-18"]

[tool_requires]
cmake/3.30.0
ninja/1.12.0
