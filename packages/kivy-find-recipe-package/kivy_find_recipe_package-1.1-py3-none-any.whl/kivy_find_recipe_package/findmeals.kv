<Label>:
    font_size: 20

<MainGrid>
    cols: 1
    padding: 10
    recipes: []
    Label:
        text: 'Meal Finder'
        size_hint_y: None
        size_hint: (1, 0.2)
        font_size: 30
        bold: True
    Label:
        id: errorLabel
        size_hint_y: None
        color: (1, 0, 0, 1)
        size_hint: (1, 0)
    GridLayout:
        cols: 3
        size_hint_y: None
        size_hint: (1, 0.1)
        padding: 10
        spacing: 10
        TextInput:
            id: searchInput
            hint_text: "Enter ingredients"
            multiline: False
        Button:
            text: "Search"
            on_press: root.search()
        Button:
            size_hint_y: None
            size_hint: (0.5, 1)
            text: 'Settings'
            on_press: root.settings()
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        size_hint: (1, 0.7)
        padding: 10
        Label:
            text: 'Recipes Found'
            size_hint_y: None
            size_hint: (1, 0.1)
            font_size: 25
            bold: True
        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                id: mealList
                size_hint_y: None
                size_hint: (1, None)
                height: 10

<RecipeWidget>
    size_hint_y: None
    height: 50
    spacing: 10
    cols: 3
    recipe: None
    Label:
        id: recipeName
    Label:
        size_hint_x: 0.5
        id: ingredients
    Button:
        text: 'View Recipe'
        on_press: root.view()

<InfoWidget>
    size_hint_y: None
    height: 50
    spacing: 10
    cols: 3
    Label:
        text: 'Name'
        bold: True
    Label:
        text: 'Ingredients Needed'
        size_hint_x: 0.5
        bold: True
    Label:
        text: 'Full Recipe'
        bold: True

<SettingsPopup>
    title: 'Request Settings'
    size_hint: (1, 0.8)
    auto_dismiss: False
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            text: 'Request Settings'
            size_hint_y: None
            size_hint: (1, 0.2)
            font_size: 25
        GridLayout:
            cols: 2
            padding: 10
            size_hint_y: None
            size_hint: (1, 0.6)
            spacing: 10
            Label:
                text: 'Spoonacular API Key'
            TextInput:
                id: apiKeyInput
                hint_text: 'Enter API Key'
                multiline: False
            Label:
                text: 'Number of Recipes to Return'
            TextInput:
                id: numRecipesInput
                hint_text: 'Enter Number of Recipes'
                input_filter: 'int'
                multiline: False
            Label:
                text: 'Ignore Pantry Items (salt, pepper, etc.)'
            CheckBox:
                id: ignorePantry
        GridLayout:
            cols: 2
            size_hint_y: None
            size_hint: (1, 0.2)
            padding: 10
            Button:
                text: 'Close'
                on_press: root.dismiss()
            Button:
                text: 'Save'
                background_color: (0,1,0,1)
                on_press: root.save()

<RecipePopup>
    title: 'Recipe Details'
    size_hint: (1, 0.8)
    auto_dismiss: False
    recipe: None
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            size_hint: (1, 0.4)
            padding: 10
            id: ImageR
        Label:
            id: recipeName
            size_hint_y: None
            size_hint: (1, 0.1)
            font_size: 25
            bold: True
        Label:
            id: missingIngredients
            size_hint_y: None
            size_hint: (1, 0.1)
            font_size: 20
        GridLayout:
            cols: 1
            size_hint_y: None
            size_hint: (1, 0.2)
            padding: 10
            Button:
                text: 'Close'
                on_press: root.dismiss()