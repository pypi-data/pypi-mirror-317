.topbar {
    width: 1fr;
    height: 1;
    align: center middle;
    background: $primary-background;
    &.message {
        content-align: center middle;
        padding: 0;
        margin: 0;
        background: $surface;
    }
    &.safemode {
        content-align: center middle;
        padding: 0;
        margin: 0;
        background: $accent;
        color: $text;
    }
}

#topbar_label {
    width: 20;
    content-align: left middle;
    padding: 0 0 0 4;
}


# LeftBar {
